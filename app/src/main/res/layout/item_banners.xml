<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="182dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/img_banners"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dumybanners" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_datebanners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:fontFamily="poppins_regular"
            android:text="@string/_02_jan_2023_10_03"
            android:textColor="@color/gray_400"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_titlebanners"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/lmi_dan_smp_islam_qurani_al_bahjah_blitar_edukasi_siaga_bencana_alam"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="poppins_semibold"
        android:textColor="@color/gray_950"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Berita"
            android:textSize="12sp"
            android:textColor="@color/gray_400"
            android:fontFamily="poppins_regular"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_share"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>