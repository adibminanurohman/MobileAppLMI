<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_majalah"
    >

    <ImageView
        android:id="@+id/img_cover_majalah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cover_majalah" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/judul_majalah"
            android:text="Judul Majalah"
            android:textStyle="bold"
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tanggal"
            android:text="2018-01-01"
            android:textSize="12sp"
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/deskripsi_majalah"
            android:text="@string/deskripsi_majalah"
            android:textSize="12sp"
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>