<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="12dp"
    android:id="@+id/item_majalah"
    >

    <ImageView
        android:id="@+id/img_cover_majalah"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cover_majalah" />

    <Space
        android:layout_width="12dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_majalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Judul Majalah"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="2018-01-01"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deskripsi_majalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/deskripsi_majalah"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>