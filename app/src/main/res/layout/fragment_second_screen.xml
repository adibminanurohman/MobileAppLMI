<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/imgonboarding2"
tools:context=".onboarding.SecondScreen">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/gradientonboarding"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/setiap_donasi_seberapa_pun_kecilnya_dapat_membawa_dampak_besar"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Setiap kontribusi Anda berarti. Dari hal kecil hingga besar, setiap donasi membantu membangun masa depan yang lebih cerah."
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="13sp" />
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>