<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="12dp"
    android:id="@+id/item_majalah">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="127dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/img_cover_majalah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_majalah" />
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="12dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_majalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Judul Majalah"
            android:textSize="14sp"
            android:textColor="@color/gray_900"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="2018-01-01"
            android:textColor="@color/gray_400"
            android:fontFamily="@font/poppins"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deskripsi_majalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_400"
            android:fontFamily="@font/poppins"
            android:layout_marginVertical="2dp"
            android:text="@string/deskripsi_majalah"
            android:maxLines="3"
            android:textSize="12sp"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>